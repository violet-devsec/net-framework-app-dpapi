@model DpapiWebApp.Models.UserViewModel
@{
    ViewBag.Title = "User";
}

<div class="container-fluid text-center">
    <div class="row content">
        <div class="col-sm-2 sidenav" style="height:650px;">
        </div>
        <div class="col-sm-8">
            <div class="row">
                <h2>Guestbook</h2>
                <h4>See what people are saying about us!</h4>
                <table align="center">
                    <tr>
                        <td style="padding:5px;"><div class="alert-success"><strong> @Model.Name </strong></div></td>
                        <td style="padding:5px;"><div class="alert-info"> - @Model.Age </div></td>
                    </tr>
                </table>
            </div>

            <div class="row">
                <form asp-controller="User" asp-action="Display" method="POST">
                    <input value="Submit" type="submit">
                </form>
            </div>
        </div>
        <div class="col-sm-2 sidenav" style="height:650px;">

        </div>
    </div>
</div>

